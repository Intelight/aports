# Maintainer: Doug Crawford <doug.crawford@intelight-its.com>
pkgname=pion
pkgver=4.0.11
pkgrel=0
pkgdesc="C++ framework for building lightweight HTTP interfaces"
url="http://www.pion.org"
arch="all"
license="Boost"
depends="boost-dev"
depends_dev="cmake"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://intelight.s3.amazonaws.com/vendor/intelight-old-pion-net-5afe4899f26b.tar.bz2"

builddir="$srcdir/intelight-old-pion-net-5afe4899f26b"
build() {
	cd "$builddir"
	mkdir build
	cd build
	cmake -D CMAKE_INSTALL_PREFIX=/usr \
		-D Boost_USE_STATIC_LIBS=OFF \
		..
	make
}

package() {
	cd "$builddir/build"
	make install DESTDIR="${pkgdir}"
}

