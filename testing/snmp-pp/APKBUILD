# Maintainer: Doug Crawford <doug.crawford@intelight-its.com>
pkgname=snmp-pp
pkgver=2.6
pkgrel=0
pkgdesc="HP snmp++ library"
url="http://www.intelight-its.com"
arch="all"
license="BSD"
depends=""
depends_dev="cmake"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://intelight.s3.amazonaws.com/vendor/intelight-snmp-cf08839e81d9.tar.bz2"

builddir="$srcdir/intelight-snmp-cf08839e81d9"
build() {
	cd "$builddir"
	mkdir build
	cd build
	cmake -D CMAKE_INSTALL_PREFIX=/usr \
		-D CMAKE_POSITION_INDEPENDENT_CODE=ON \
		..
	make
}

package() {
	cd "$builddir/build"
	make install DESTDIR="${pkgdir}"
}

